{
  "manifest_version": 3,
  "name": "Sustainability Dashboard",
  "version": "2.0",
  "description": "A tool to visualize COâ‚‚ emissions for images on the page.",
  "action": {
    "default_popup": "ui/popup.html"
  },
  "permissions": [
    "webRequest",
    "storage",
    "webNavigation",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentscript.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["chart.js", "co2.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
